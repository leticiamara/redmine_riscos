<h1>Acoes</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Tipo</th>
    <th>Titulo</th>
    <th>Descricao</th>
    <th>Artibuido para</th>
    <th>Prazo</th>
    <th>Data de conclusao</th>
    <th>Risco</th>
  </tr>

<% @acoes.each do |acao| %>
  <tr>
    <td><%= link_to '#' + acao.id.to_s, acao %></td>
    <td><%= acao.tipo %></td>
    <td><%= acao.titulo %></td>
    <td><%= acao.descricao %></td>
    <td><%= acao.atribuido_para %></td>
    <td><%= acao.prazo %></td>
    <td><%= acao.data_de_conclusao %></td>
    <td><%= link_to '#'+ acao.risco_id.to_s, risco_path(:id => acao.risco_id, :project_id => @project.identifier) %></td>

    <td><%= link_to 'Edit', edit_acao_path(acao) %></td>
    <td><%= link_to 'Destroy', acao_path(acao), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
